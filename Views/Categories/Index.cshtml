@model IEnumerable<ExpenseTrackerApp.Models.Category>

@{
    ViewData["Title"] = "Categories";


    var globalCategories = Model.Where(c => c.UserId == null).ToList();
    var myCategories = Model.Where(c => c.UserId != null).ToList();
}

<div class="d-flex justify-content-between align-items-center mb-3">
<h1 class="mb-0">Categories</h1>
    <a asp-action="Create" class="btn btn-success">+ New Category</a>
</div>

@if (myCategories.Any())
{
    <h4 class="mt-3">My Categories</h4>
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th style="width: 180px;"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in myCategories) 
        {
            <tr>
                <td>@item.Name</td>
                <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        You don’t have custom categories. Click <strong>+ New Category</strong> to create one.
    </div>
}

<h4 class="mt-4">Global Categories</h4>
<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Name</th>
            <th style="width: 180px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in globalCategories)
        {
            <tr>
                <td>@item.Name</td>
                <td class="text-end">
                    <span class="text-muted">Read-only</span>
                </td>
            </tr>
        }
    </tbody>
</table>